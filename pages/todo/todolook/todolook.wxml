<view style="width:100%; height:100%;">
    <view style='margin-top:10rpx; margin-left: 20rpx; margin-right: 20rpx;'>
        <text style='width:100%;font-size:48rpx;'>{{todoTitle}}</text>
    </view>
    <view style='margin-top:20rpx; margin-left: 20rpx; margin-right: 20rpx; margin-bottom: 20rpx;'>
        <rich-text style='height: 400rpx; width: 100%; font-size: 30rpx;'>{{todoContent}}</rich-text>
    </view>
    <view style='margin-top:20rpx; margin-left: 20rpx; margin-right: 20rpx; display: {{alertTimeDisplay}}'>
        <view style='height: 70rpx; padding-top:20rpx;'>
            提醒日期：
            <text style='font-size: 30rpx;'>{{todoDate}}</text>
        </view>
        <view style='height: 70rpx;'>
            提醒时间：
            <text style='font-size: 30rpx;'>{{todoTime}}</text>
        </view>
        <text class='title'>提前提醒时间：<text style='font-size:30rpx;'>{{alertTime}}分钟</text></text>
    </view>
</view>