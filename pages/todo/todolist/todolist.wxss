.root {
    background: #efeff4;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 90%;
}

.line {
    margin-top: 10rpx;
}

.title {
    color: #6d6d72;
    font-size: 28rpx;
    margin-left: 40rpx;
}

.text-finished {
    color: #6d6d72;
}

.line-control {
    border-bottom: #d9d9d9 1px solid;
    border-top: #d9d9d9 1px solid;
    background-color: #fff;
    margin-top: 10rpx;
}

.line-control .item {
    box-sizing: border-box;
    text-align: left;
    color: #007aff;
    font-size: 32rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
    position: relative;
}

.line-control .item-inner {
    border-bottom: #d9d9d9 1px solid;
    height: 90rpx;
    line-height: 90rpx;
}

.checkbox {
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: auto;
}

.footer button {
    margin-left: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.text-right {
    float: right;
    color: #6d6d72;
    font-size: 28rpx;
}

.line-control .item:last-child .item-inner {
    border: none;
}

@media (max-width : 360px) {
    .text-right {
        font-size: 36rpx;
    }

    .title {
        font-size: 36rpx;
    }

    .line-control .item-inner {
        border-bottom: #d9d9d9 1px solid;
        height: 110rpx;
        line-height: 110rpx;
    }

    .line-control .item {
        height: 110rpx;
        line-height: 110rpx;
        box-sizing: border-box;
        text-align: left;
        color: #007aff;
        font-size: 38rpx;
        padding-left: 40rpx;
        position: relative;
    }
}
